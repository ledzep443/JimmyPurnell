    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="@HomePageUri" class="nav-link mx-5 md-and-smaller-my-3 @(IsPageActive(HomePageUri) ? "active" : string.Empty)">
                    Home
                </a>
            </li>

            <li class="nav-item">
                <a href="@BlogPageUri" class="nav-link mx-5 md-and-smaller-my-3 @(IsPageActive(BlogPageUri) ? "active" : string.Empty)">
                    Blog
                </a>
            </li>
        </ul>
    </div>
</nav>

@code 
{
    [Inject] public NavigationManager NavigationManager { get; set; }

    private const string HomePageUri = "/";
    private const string BlogPageUri = "/blog";

    private bool IsPageActive(string pageUri)
    {
        //Skip 3 to remove https://domain.com/
        string[] currentUriSplit = NavigationManager.Uri.Split('/').Skip(3).ToArray();

        if(pageUri == HomePageUri)
        {
            if(currentUriSplit.Last().Length == 0)
            {
                return true;
            }
        }
        else
        {
            string[] pageUriSplit = pageUri.Split('/').Skip(1).ToArray();
            foreach(string currentUriPart in currentUriSplit)
            {
                foreach(string pageUriPart in pageUriSplit)
                {
                    if (pageUriPart == currentUriPart)
                    {
                        return true;
                    }
                }
            }
        }
        //If code reaches here pageUri is not the active page, and returns false.
        return false;
    }
}
