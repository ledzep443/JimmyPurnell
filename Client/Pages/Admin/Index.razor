@page "/admin"

<AuthorizeView Roles="Administrator">
    <Authorized Context="Auth">
        <main class="admin-area-main">

            <Client.Components.Admin.Sidebar />

            <div class="admin-area-content container-fluid bg-white">
                <div class="row g-8">
                    <div class="col">
                        <h1>Overview</h1>
                        <br />
                        <hr />
                        <br />
                        @if (InMemoryDatabaseCache.Categories == null || InMemoryDatabaseCache.ProjectCategories == null || InMemoryDatabaseCache.Posts == null || InMemoryDatabaseCache.Projects == null)
                        {
                            <LoadingDot />
                        }
                        else
                        {
                            <div class="row">
								<div class="col-lg-4 p-3 md-and-smaller-my-3">
									<div class="card shadow">
										<a href="/admin/blogcategories" class="stretched-link text-white">
											<img src="assets/img/admincards/categories-card-background.jpg" class="card-img" alt="Overview categories card background" />
											<div class="card-img-overlay d-flex flex-column">
												<h1 class="card-title fw-bold">Blog Categories</h1>
												<h4 class="card-text">@InMemoryDatabaseCache.Categories.Count blog categories exist.</h4>

												<div class="d-flex align-items-end justify-content-end flex-grow-1">
													<i class="fas fa-arrow-right ms-4 h1"></i>
												</div>
											</div>
										</a>
									</div>
								</div>

								<div class="col-lg-4 p-3 md-and-smaller-my-3">
									<div class="card shadow">
										<a href="/admin/posts" class="stretched-link text-white">
											<img src="assets/img/admincards/posts-card-background.jpg" class="card-img" alt="Overview categories card background" />
											<div class="card-img-overlay d-flex flex-column">
												<h1 class="card-title fw-bold">Posts</h1>
												<h4 class="card-text">@InMemoryDatabaseCache.Posts.Count posts exist.</h4>

												<div class="d-flex align-items-end justify-content-end flex-grow-1">
													<i class="fas fa-arrow-right ms-4 h1"></i>
												</div>
											</div>
										</a>
									</div>
								</div>
							</div>
                            <div class="row">
								<div class="col-lg-4 p-3 md-and-smaller-my-3">
									<div class="card shadow">
										<a href="/admin/projectcategories" class="stretched-link text-white">
											<img src="assets/img/admincards/categories-card-background.jpg" class="card-img" alt="Overview categories card background" />
											<div class="card-img-overlay d-flex flex-column">
												<h1 class="card-title fw-bold">Project Categories</h1>
												<h4 class="card-text">@InMemoryDatabaseCache.ProjectCategories.Count project categories exist.</h4>

												<div class="d-flex align-items-end justify-content-end flex-grow-1">
													<i class="fas fa-arrow-right ms-4 h1"></i>
												</div>
											</div>
										</a>
									</div>
								</div>

								<div class="col-lg-4 p-3 md-and-smaller-my-3">
									<div class="card shadow">
										<a href="/admin/projects" class="stretched-link text-white">
											<img src="assets/img/admincards/posts-card-background.jpg" class="card-img" alt="Overview categories card background" />
											<div class="card-img-overlay d-flex flex-column">
												<h1 class="card-title fw-bold">Projects</h1>
												<h4 class="card-text">@InMemoryDatabaseCache.Projects.Count projects exist.</h4>

												<div class="d-flex align-items-end justify-content-end flex-grow-1">
													<i class="fas fa-arrow-right ms-4 h1"></i>
												</div>
											</div>
										</a>
									</div>
								</div>
							</div>
                        }
                    </div>
                </div>
            </div>
        </main>
    </Authorized>
    <NotAuthorized>
        <Client.Components.Admin.SignIn />
    </NotAuthorized>
</AuthorizeView>
@code {
    [Inject] InMemoryDatabaseCache InMemoryDatabaseCache { get; set; }
    protected override async Task OnInitializedAsync()
    {
        if (InMemoryDatabaseCache == null)
        {
            await InMemoryDatabaseCache.GetCategoriesFromDatabaseAndCache(true);
            await InMemoryDatabaseCache.GetProjectCategoriesFromDatabaseAndCache(true);
        }
    }
}
